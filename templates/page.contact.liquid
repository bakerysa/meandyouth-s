<div class="row full-width">
  <div class="columns large-6">
    <div class="contact-left">
    <h1>{{ 'contact_page.contact-promo-left' | t }}</h1>
    <button class="button styled-submit"><a href="mailto:{{ 'contact_page.contact-button-left' | t }}">{{ 'contact_page.contact-button-left' | t }}</a></button>
  </div>
  </div>
  <div class="columns large-6">
    <div class="contact-right">
    <h1>{{ 'contact_page.contact-promo-right' | t }}</h1>
    <button class="button styled-submit"><a href="{{ 'contact_page.contact-button-right' | t }}">{{ 'contact_page.contact-button-right' | t }}</a></button>
  </div>
</div>
</div>

<div class="row full-width">
  <h1 class="page-title">{{ page.title }}</h1>
  <div class="columns large-6">
    {% form 'contact' %}

      {% if form.posted_successfully? %}
      <div class="success feedback accent-text">
        <p>{{ 'contact_page.success_feedback' | t }}</p>
      </div>
      {% endif %}

      {% if form.errors %}
      <div class="error feedback accent-text">
        <p>{{ 'contact_page.error_feedback' | t }}:</p>
        <ul>
        {% for field in form.errors %}
          <li>{{ field | capitalize | replace: 'Body', 'Message' }} {{ form.errors.messages[field] }}</li>
        {% endfor %}
        </ul>
      </div>
      {% endif %}

      {% unless form.posted_successfully? %}

      <p>
        <input type="text" placeholder="{{ 'contact_page.name' | t }}" id="contactFormName" name="contact[name]" class="styled-input{% if form.errors contains 'name' %} error{% endif %}" value="{{ contact.fields.name }}" />
      </p>
      <p>
        <input required="required" type="email" placeholder="{{ 'contact_page.email' | t }}" id="contactFormEmail" name="contact[email]" class="styled-input{% if form.errors contains 'email' %} error{% endif %}" value="{{ contact.fields.email }}" />
      </p>
      <p>
        <input type="tel" placeholder="{{ 'contact_page.phone' | t }}" id="contactFormTelephone" name="contact[phone]" class="styled-input{% if form.errors contains 'phone' %} error{% endif %}" value="{{ contact.fields.phone }}" />
      </p>
    </div>
        <div class="columns large-6">
      <p>
        <input type="text" placeholder="{{ 'contact_page.subject' | t }}" id="contactFormSubject" name="contact[subject]" class="styled-input{% if form.errors contains 'subject' %} error{% endif %}" value="{{ contact.fields.subject }}" />
      </p>
      <p>
        <textarea required="required" placeholder="{{ 'contact_page.message' | t }}" rows="15" cols="60"  id="contactFormMessage" name="contact[body]" class="styled-input{% if form.errors contains 'body' %} error{% endif %}">{{  contact.fields.body }}</textarea>
      </p>
      <p>
        <input class="button styled-submit" type="submit" id="contactFormSubmit" value="{{ 'contact_page.button' | t }}" />
      </p>

      {% endunless %}

      {% if form.posted_successfully? or form.errors %}
        <script>
          window.location.hash = '#page-content';
        </script>
      {% endif %}
    {% endform %}
          </div>
</div>
